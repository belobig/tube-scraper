{{!-- Templating for all Videos --}} {{!-- Iterate Over all the videos --}} {{#each videos}}
<ul class="collapsible" data-collapsible="accordion">

	<!-- Video Drop Down -->
	<li>
		<div style="background-color: white;" class="collapsible-header blue lighten-2">
			<i class="material-icons">details</i>
			<b>{{updated}}</b>
			<div style="clear: left; line-height: 110%; padding-bottom: 10px;">
				<b>{{title}}</b>
			</div>
		</div>
		<div class="collapsible-body" style="background-color: white;">
			<p>
				<a href="{{link}}" target="_new">
					<img src={{image}}>
				</a>
				<br> {{duration}}
				<br> - Channel: {{channel}}
			</p>

		</div>
	</li>


	<!-- Add Comments Drop Down -->
	<li>
		<div class="collapsible-header">
			<i class="material-icons">add_comment</i>Add a Comment</div>
		<div class="collapsible-body" style="background-color: white;">

			<form id="form-add-{{_id}}" action="add/comment/{{_id}}" method="post" style="background-color: white;">

				<!-- Author Name Input -->
				<div class="row">
					<div class="input-field col s2"></div>
					<div class="input-field col s8">
						<input id="author_name" name="name" type="text" class="validate">
						<label for="author_name">Your Name:</label>
					</div>
				</div>

				<!-- Comment Input -->
				<div class="row">
					<div class="input-field col s2"></div>
					<div class="input-field col s8">
						<textarea id="comment_box" name="comment" class="materialize-textarea"></textarea>
						<label for="comment_box">Your Reaction:</label>
					</div>
				</div>

				<!-- Submit Button -->
				<div class="row">
					<div class="input-field col s2"></div>
					<div class="input-field col s8">
						<center>
							<input class="btn add-comment-button blue" data-id="{{_id}}" type="submit" value="Submit">
						</center>
					</div>
				</div>

			</form>

		</div>
	</li>


	<!-- View Comments Drop Down -->
	<li>
		<div class="collapsible-header">
			<i class="material-icons">comment</i>View Comments</div>
		<div class="collapsible-body" style="background-color: white;">

			{{!-- Check if the video has comments --}} {{#if comments}} {{!-- Video has comments so iterate over them --}}
			<ul class="collection">
				{{#each comments}}

				<li class="collection-item">

					{{!-- Add Author Name --}}
					<b>{{author}}</b>

					{{!-- Add a Delete Button --}}
					<span class="badge">
						<form id="form-delete-{{_id}}" action="remove/comment/{{_id}}" method="post">
							<input class="btn-small delete-comment-button" data-id="{{_id}}" type="submit" value="Delete" style="color: white; background-color: red; border-color: red;">
						</form>
					</span>

					<br> {{!-- Add the Content of the Comment --}} {{content}}

				</li>
				{{/each}}
			</ul>

			{{!-- No comments, so display message --}} {{else}}
			<p>No Comments Yet :( </p>
			{{/if}}


		</div>
	</li>

</ul>
{{/each}}